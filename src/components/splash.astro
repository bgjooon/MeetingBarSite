---
import { Image, Picture } from "@astrojs/image/components";
import dropdownImage from "~/assets/dropdown.png";
import HeroImage from "~/components/hero-image.astro";
import Starfield from "~/components/starfield.astro";
import GitHubCorner from "./github-corner.astro";

const widths = [450, 800];
const sizes = "(min-width: 640px) 42vw, 67vw";
---

<section class="relative h-full bg-black">
  <Starfield />
  <GitHubCorner />
  <div id="splash-bg-fallback" class="absolute inset-0 hidden opacity-40">
    <HeroImage />
  </div>
  <div class="relative grid h-full place-items-center sm:grid-cols-2">
    <h2
      class="flex flex-col gap-2 self-end sm:gap-4 sm:self-auto sm:justify-self-end"
    >
      <!-- <Icon name="logomark" class="h-24 text-white md:h-32" /> -->
      <!-- <Image src={logoImage} alt="MeetingBar logo" height={160} class="self-center" /> -->
      <div
        class="gradient-text text-center font-extrabold tracking-tighter text-8xl pb-2 pr-1"
      >
        Meetings
        <br /> at your
        <br /> fingertips
      </div>
      <div class="self-center pt-10">
        <a
          href="https://apps.apple.com/us/app/meetingbar-for-meet-zoom-co/id1532419400?mt=12&itsct=apps_box_badge&itscg=30200"
          data-umami-event="App Store"
          style="display: inline-block; overflow: hidden; border-radius: 13px; width: 250px; height: 83px;"
          ><img
            src="https://tools.applemediaservices.com/api/badges/download-on-the-mac-app-store/black/en-us?size=250x83&releaseDate=1601769600"
            alt="Download on the Mac App Store"
            style="border-radius: 13px; width: 250px; height: 83px;"
          /></a
        >
      </div>
    </h2>
    <div
      id="astronaut"
      class="w-1/3 max-w-3xl self-start sm:w-10/12 sm:self-auto sm:justify-self-start"
    >
      <Picture
        class="h-full w-full object-cover"
        src={dropdownImage}
        widths={widths}
        sizes={sizes}
        loading="eager"
        alt="A floating astronaut in a space suit"
      />
    </div>
  </div>
</section>

<noscript>
  <style>
    #splash-bg-fallback {
      display: block;
    }
  </style>
</noscript>

<style>
  @keyframes float {
    0% {
      transform: translate3d(0, 0, 0);
    }

    100% {
      transform: translate3d(0, 30px, 0);
    }
  }

  /* #astronaut {
    animation: float linear 2.5s infinite alternate;
  } */

  @media (prefers-reduced-motion: reduce) {
    #astronaut {
      @apply animate-none;
    }

    :global(#starfield) {
      @apply hidden;
    }

    #splash-bg-fallback {
      @apply block;
    }
  }
</style>
