---
import { Icon } from "astro-icon";
import HeroImage from "~/components/hero-image.astro";
import type { FooterLink } from "~/types";

const links: Array<FooterLink> = [
  {
    url: "https://github.com/leits/MeetingBar",
    description: "View source on GitHub",
    icon: "logos:github-icon",
  },
  {
    url: "https://www.producthunt.com/products/meetingbar",
    description: "MeetingBar on ProductHunt",
    icon: "logos:producthunt",
  },
  {
    url: "https://twitter.com/MeetingBarApp",
    description: "MeetingBar on Twitter",
    icon: "logos:twitter",
  },
  {
    url: "https://www.patreon.com/meetingbar",
    description: "MeetingBar on Patreon",
    icon: "logos:patreon",
  },
];
---

<footer class="relative flex h-64 items-center justify-center">
  <ul class="relative grid grid-cols-2 gap-4 sm:grid-cols-4">
    {
      links.map((link) => (
        <li>
          <a
            class="flex h-20 w-20 items-center justify-center rounded-full t p-4"
            href={link.url}
          >
            <span class="sr-only">{link.description}</span>
            <Icon class="h-full" name={link.icon} />
          </a>
        </li>
      ))
    }
  </ul>
</footer>
